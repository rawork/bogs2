{% if order.is_preorder == 1 %}
<p>&nbsp;</p>
<p class="order-status--processing">Товары по предзаказу оплачиваются и отправляются по факту поступления на склад.</p>
{% endif %}
<ul class="order-props">
    <li class="order-prop">
        Статус заказа: <span class="order-status order-status--processing">{{ order_status_title }}</span>
    </li>
    <li class="order-prop">
        Способ оплаты: <span class="order-payment-type">{{ payment_type_title }}</span>
    </li>
    {% if order.order_status != 'calc'  %}
    <li class="order-prop">
        Сумма заказа с доставкой: <span class="order-total">{{ order.cost+order.delivery_cost }}</span> руб.
    </li>
    {% endif %}
</ul>
{% if order.order_status == 'wait' and order.is_preorder != 1 and order.payment_type == 'card' %}
<div class="btn-wrap ">
    <a href="#" class="btn btn-pay">Оплатить заказ</a>
</div>
{% endif %}
{% if order.payment_type == 'bank' %}
    <div class="btn-wrap ">
        <a target="_blank" href="{{ path('order_notice', {id: id}) }}" class="btn">Скачать квитанцию на оплату</a>
    </div>
{% endif %}


<h4 class="products-list__title">Товары в заказе</h4>
<!-- Products list -->
<table class="products-list">
    <thead>
    <tr>
        <th>Наименование</th>
        <th>Размер</th>
        <th>Кол-во</th>
        <th>Цена</th>
    </tr>
    </thead>
    <tbody>
    {%  for product in order.detail_json %}
    <tr class="product-in-cart">
        <td class="product-in-cart__name">{{ product.name }}</td>
        <td class="product-in-cart__size">{{ product.size }} US</td>
        <td class="product-in-cart__qty">{{ product.amount }}</td>
        <td class="product-in-cart__price">{{ product.price }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% if order.order_status == 'calc' %}
<div class="total">Стоимость товаров:  <span class="total__val">{{ order.cost }}</span></div>
{% else %}
<div class="total">Стоимость товаров и доставки:  <span class="total__val">{{ order.delivery_cost+order.cost }}</span></div>
{% endif %}
{% if (merchantInfo) %}
    <form id="form-payment" method="post" action="">
        <input type="hidden" name="action" value="create_payment">
                {% for paySystem in merchantInfo.PaySystems %}
                    {% if paySystem.Id == 1 or paySystem.Id == 2022  %}
                    <input type="hidden" name="SelectedPaySystemId" value="{{ paySystem.Id }}">
                    {% endif %}
                {% endfor %}
    </form>
{% endif %}

{% if (createPaymentResponse)  %}
    {#CreatePayment<br/>#}
    {#ErrorCode: {{ createPaymentResponse.ErrorCode }}<br/>#}
    {#DebugMessage: {{ createPaymentResponse.DebugMessage }}<br/>#}
    {{ createPaymentResponse.ExternalForm|dbase64 }}
{% endif %}