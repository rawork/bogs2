{% if message %}
    <div class="basket-error">{{ message }}</div>
{% endif %}
<!-- Products list -->

<table class="products-list">
    {% if cart|length == 0 %}
    <tr class="empty-cart"><td>Ваша корзина пуста</td></tr>
    {% else %}
    <thead>
    <tr>
        <th>Наименование</th>
        <th>Размер</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Сумма</th>
    </tr>
    </thead>
    <tbody>
    {% for product in cart %}
    <tr class="product-in-cart">
        <td class="product-in-cart__name"><img class="product-in-cart__photo" src="{{ product.product.photo_value.extra.thumb.path }}"> {{ product.product.name }} (Арт. {{ product.product.articul }})</td>
        <td class="product-in-cart__size">{{ product.sku.size }} US</td>
        <td class="product-in-cart__price0">{{ product.product.price }}</td>
        <td class="product-in-cart__qty">
            <div class="product-sizes custom-select clearfix">
                {#<div class="custom-select__list-wrap">#}
                    {#<select class="custom-select__list">#}
                        {#<option>1</option>#}
                        {#<option>2</option>#}
                        {#<option>3</option>#}
                    {#</select>#}
                    {#<span class="custom-select__chevron"></span>#}
                {#</div>#}
                <div class="custom-input custom-input_cart">
                    <a href="javascript:;" class="circle minus-circle amount-dec">-</a>
                    <input type="text"
                           class="amount"
                           data-price="{{ product.product.price }}"
                           data-id="{{ product.sku.id }}"
                           data-sku="{{ product.sku.modarola_id }}"
                           data-value="{% if product.sku.product_id_value.item.is_preorder %}10{% else %}{{ product.sku.quantity+product.sku.quantity2+product.sku.quantity3 }}{% endif %}"
                           value="{{ product.amount }}" />
                    <a href="javascript:;" class="circle plus-circle amount-inc">+</a>
                </div>
            </div>
        </td>
        <td class="product-in-cart__price">{{ product.sku.product_id_value.item.price*product.amount }}</td>
        <td><a href="#"  data-id="{{ product.sku.id }}" class="remove"></a></td>
    </tr>
    {% endfor %}
    </tbody>
    {% endif %}
</table>
{% if cart|length > 0 %}
<a name="info"></a>
<div class="sub-total">Сумма товаров:  <span class="sub-total__val">{{ total }}</span></div>

