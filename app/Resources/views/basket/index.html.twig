                    <label for="russia-courier">По России курьером</label>
                </div>
                {#<div class="select-region hidden-area">#}
                    {#<input type="text" class="select-region__field" data-source="regions" data-context="price_carrier" placeholder="Введите название региона">#}
                    {#<ul class="autocomplete">#}
