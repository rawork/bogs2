<div class="product-card">
    <div class="product-gallery">
        <div class="gallery-img-big"><img src="{{ product.photo_value.extra.main.path }}"></div>
        <ul class="gallery-grid clearfix">
            <li><img src="{{ product.photo_value.extra.main.path }}" class="gallery-thumb" data-img-big="{{ product.photo_value.extra.main.path }}"></li>
            {% for image in product.gallery_value  %}
            <li><img src="{{ image.extra.thumb.path }}" class="gallery-thumb" data-img-big="{{ image.extra.main.path }}"></li>
            {% endfor %}
        </ul>
    </div>
    <div class="product-price">{{ product.price }} руб.</div>
    <div class="product-articul">Артикул: {{ product.articul }}</div>
    <div class="product-checkout clearfix">
        <div class="product-sizes clearfix">
            <div class="sizes-label">Размеры:</div>
            <div class="sizes-list-wrap">
                <select class="sizes-list">
                    {% for size in sizes %}
                    <option value="{{ size.modarola_id }}">{{ size.size }} US</option>
                    {% endfor %}
                </select>
                <span class="chevron"></span>
            </div>
        </div>
        {% if sizes|length > 0 %}<a href="#" class="btn add-product">Добавить в корзину</a>{% endif %}
    </div>
    <ul class="product-tabs">
        <li class="active"><a href="#" data-tab="description">Описание</a></li>
        <li><a href="#" data-tab="delivery">Доставка</a></li>
        <li><a href="#" data-tab="payment">Оплата</a></li>
    </ul>
    <ul class="product-tabs-content">
        <li data-tab-content="description" class="active">{{ product.description }}</li>
        <li data-tab-content="delivery">{{ render('Fuga:Public:Common:block', {'name': 'delivery'}) }}</li>
        <li data-tab-content="payment">{{ render('Fuga:Public:Common:block', {'name': 'payment'}) }}</li>
    </ul>
</div>